@{
    ViewData["Title"] = "Nivi | Bean & Brews";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Nivi.css" asp-append-version="true" />
}

<main class="nivi-page">

    <!-- TOP INTRO STRIP -->
    <section class="nivi-intro-bar">
        <p>
            You’re viewing <strong>GG Master</strong> for the Bean &amp; Brews.
        </p>
    </section>

    <!-- HERO SECTION -->
    <section class="nivi-hero">
        <div class="nivi-hero-content nivi-fade">
            <h1 class="nivi-title">
                Welcome to <span>Bean &amp; Brews</span>
            </h1>
            <p class="nivi-subtitle">
                Designed by Nivi – where good design meets good coffee.
            </p>

            <div class="nivi-hero-buttons">
                <a asp-controller="Account" asp-action="Register" class="nivi-btn nivi-btn-primary">
                    Create an account
                </a>
                <a asp-controller="Account" asp-action="Login" class="nivi-btn nivi-btn-outline">
                    I already have an account
                </a>
            </div>

            <p class="nivi-tagline">
                ☕ Earn rewards, save your favourite drinks and pre-order in seconds.
            </p>

            <!-- small stats strip -->
            <div class="nivi-stats">
                <div class="nivi-stat">
                    <span class="nivi-stat-number">20+</span>
                    <span class="nivi-stat-label">Drinks on the menu</span>
                </div>
                <div class="nivi-stat">
                    <span class="nivi-stat-number">3</span>
                    <span class="nivi-stat-label">Local branches</span>
                </div>
                <div class="nivi-stat">
                    <span class="nivi-stat-number">5★</span>
                    <span class="nivi-stat-label">Customer-rated</span>
                </div>
            </div>
        </div>

        <aside class="nivi-hero-card nivi-fade" aria-label="Today’s special coffee">
            <h2>Today’s Special</h2>
            <p class="nivi-special-name">Caramel Vanilla Latte</p>
            <p class="nivi-special-desc">
                Double-shot espresso, steamed milk and a smooth caramel-vanilla swirl.
            </p>
            <p class="nivi-special-note">
                Yoo all <strong>Enjoy</strong> this right?.
            </p>
        </aside>
    </section>


    <!-- This is a fun section dont mind it-->

    <section class="Yes">
        <div class="nivi-hero is the one nivi-fade">
            <h2 class="nivi-title">
                STTOOPP <span>BULLYINGG&amp; MEE</span>
            </h2>
            <p class="nivi-subtitle">
                Refrain from bullying me, forr my patience is thinner than CSS margain on zero!
            </p>

            <div class="nivi-hero-buttons">
                <a asp-controller="Account" asp-action="ONN" class="nivi-btn nivi-btn-primary">
                    GETT OFF
                </a>
                <a asp-controller="Account" asp-action="OFFF" class="nivi-btn nivi-btn-outline">
                    GETT ONN
                </a>
            </div>
        </div>
    </section>




    <!-- FEATURE CARDS -->
    <section class="nivi-features" aria-labelledby="features-heading">
        <h2 id="features-heading" class="nivi-section-title">Why my site is different</h2>

        <div class="nivi-feature-grid">
            <article class="nivi-feature-card nivi-fade">
                <h3>Personal Dashboard</h3>
                <p>
                    When you log in, you’ll see your favourite drinks, recent orders
                    and loyalty points all in one place.
                </p>
            </article>

            <article class="nivi-feature-card nivi-fade">
                <h3>Smart Ordering</h3>
                <p>
                    Re-order your usual drink with a single click and pick it up
                    without waiting in the queue.
                </p>
            </article>

            <article class="nivi-feature-card nivi-fade">
                <h3>Fire-Friendly</h3>
                <p>
                    Built as part of our web development project – clean code,
                    responsive layout and easy to extend.
                </p>
            </article>
        </div>
    </section>

    <!-- RECOMMENDED DRINKS ROW -->
    <section class="nivi-menu-preview" aria-labelledby="menu-preview-heading">
        <h2 id="menu-preview-heading" class="nivi-section-title">Signature drinks</h2>

        <div class="nivi-menu-grid">
            <article class="nivi-menu-item nivi-fade">
                <!-- replace image paths with your own files in wwwroot/images -->
                <img src="~/css/Images/Mocha_dream.png" alt="Mocha Dream" />
                <h3>Mocha Dream</h3>
                <p>Rich chocolate, smooth espresso and steamed milk.</p>
            </article>

            <article class="nivi-menu-item nivi-fade">
                <img src="~/css/Images/Oat_Milk_Flat_White.png" alt="Oat Milk Flat White" />
                <h3>Oat Milk Flat White</h3>
                <p>Velvety texture with a nutty finish – dairy-free favourite.</p>
            </article>

            <article class="nivi-menu-item nivi-fade">
                <img src="~/css/Images/Iced_Caramel_Brew.png" alt="Iced Caramel Brew" />
                <h3>Iced Caramel Brew</h3>
                <p>Cold-brew coffee with caramel and crushed ice.</p>
            </article>
        </div>
    </section>

    <!-- BOTTOM CTA / FOOTER STRIP -->
    <section class="nivi-cta nivi-fade">
        <div class="nivi-cta-inner">
            <div>
                <h2>Ready for your first brew?</h2>
                <p>Register now and get a digital loyalty card from your very first order.</p>
            </div>
            <a asp-controller="Account" asp-action="Register" class="nivi-btn nivi-btn-primary">
                Get started
            </a>
        </div>
        <p class="nivi-credit">
            Designed &amp; coded by <strong>Nivi</strong> – Bean &amp; Brews.
        </p>
    </section>

</main>
