@{
    ViewData["Title"] = "Nivi | Bean & Brews";
}

@section Styles {
    <!-- Your personal CSS file -->
    <link rel="stylesheet" href="~/css/Nivi.css" asp-append-version="true" />
}

<main class="nivi-page">

    <!-- HERO SECTION -->
    <section class="nivi-hero">
        <div class="nivi-hero-content">
            <h1 class="nivi-title">
                Welcome to <span>Bean & Brews</span>
            </h1>
            <p class="nivi-subtitle">
                Designed by Nivi – where good design meets good coffee.
            </p>

            <div class="nivi-hero-buttons">
                <a asp-controller="Account" asp-action="Register" class="nivi-btn nivi-btn-primary">
                    Create an account
                </a>
                <a asp-controller="Account" asp-action="Login" class="nivi-btn nivi-btn-outline">
                    I already have an account
                </a>
            </div>

            <p class="nivi-tagline">
                ☕ Earn rewards, save your favourite drinks and pre-order in seconds.
            </p>
        </div>

        <div class="nivi-hero-card">
            <h2>Today’s Special</h2>
            <p class="nivi-special-name">Caramel Vanilla Latte</p>
            <p class="nivi-special-desc">
                Double-shot espresso, steamed milk and a smooth caramel-vanilla swirl.
            </p>
            <p class="nivi-special-note">
                Hand-picked by <strong>Nivi</strong> for this assignment.
            </p>
        </div>
    </section>

    <!-- FEATURE CARDS -->
    <section class="nivi-features">
        <h2 class="nivi-section-title">Why our site is different</h2>

        <div class="nivi-feature-grid">

            <article class="nivi-feature-card">
                <h3>Personal Dashboard</h3>
                <p>
                    When you log in, you’ll see your favourite drinks, recent orders
                    and loyalty points all in one place.
                </p>
            </article>

            <article class="nivi-feature-card">
                <h3>Smart Ordering</h3>
                <p>
                    Re-order your usual drink with a single click and pick it up
                    without waiting in the queue.
                </p>
            </article>

            <article class="nivi-feature-card">
                <h3>Student-Friendly</h3>
                <p>
                    Built as part of our web development project – clean code,
                    responsive layout and easy to extend.
                </p>
            </article>

        </div>
    </section>

    <!-- BOTTOM CTA / FOOTER STRIP -->
    <section class="nivi-cta">
        <div class="nivi-cta-inner">
            <div>
                <h2>Ready for your first brew?</h2>
                <p>Register now and get a digital loyalty card from your very first order.</p>
            </div>
            <a asp-controller="Account" asp-action="Register" class="nivi-btn nivi-btn-primary">
                Get started
            </a>
        </div>
        <p class="nivi-credit">
            Designed &amp; coded by <strong>Nivi</strong> – Group project, Bean & Brews.
        </p>
    </section>

</main>
